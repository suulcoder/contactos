<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo2"
        tools:context=".Crear"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="right">


            <ImageButton

                    android:layout_marginLeft="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="?attr/actionModeCloseDrawable"
                    android:id="@+id/home" android:layout_marginStart="25sp"
                    android:contentDescription="boton para regresar al incio"/>

        </LinearLayout>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_save"
                android:id="@+id/save"
                android:layout_gravity="right"/>

        <EditText
                android:layout_marginTop="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:background="@android:color/white"
                android:id="@+id/nombre" android:textColor="@android:color/black"
                android:hint="Nombre"/>

        <EditText
                android:layout_marginTop="25dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/telefono"
                android:background="@android:color/white" android:hint="telefono"/>
        <EditText
                android:layout_marginTop="25dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:ems="10"
                android:id="@+id/correo" android:inputType="textEmailAddress" android:hint="E-mail"/>




    </LinearLayout>
</RelativeLayout>