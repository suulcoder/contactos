<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Contacto"
        android:background="@drawable/fondo2"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="right">


            <ImageButton

                    android:layout_marginLeft="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="?attr/actionModeCloseDrawable"
                    android:id="@+id/home" android:layout_marginStart="25sp"
                    android:contentDescription="boton para regresar al incio"/>

        </LinearLayout>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_preferences"
                android:id="@+id/edit"
                android:layout_gravity="right"/>

        <ImageView

                android:layout_marginTop="@android:dimen/notification_large_icon_height"
                android:layout_width="match_parent"
                android:layout_height="200dp" app:srcCompat="@android:drawable/ic_menu_gallery"
                android:id="@+id/setPhoto"/>

        <LinearLayout android:layout_gravity="center" android:gravity="center" android:layout_marginTop="25sp" android:background="@android:color/holo_blue_dark" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

            <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/showNombre"
                    android:textColor="@android:color/white"
                    android:textSize="35dp"/>

        </LinearLayout>

        <LinearLayout android:layout_gravity="center" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:orientation="vertical"
                      android:background="@android:color/holo_green_light" android:id="@+id/call">

            <TextView
                    android:text="Telefono"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/showPhone"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"/>

            <ImageButton
                    android:background="@android:color/holo_green_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/stat_sys_phone_call"
                    android:id="@+id/call2"/>


        </LinearLayout>

        <LinearLayout android:foregroundGravity="center" android:background="@android:color/holo_red_dark"
                      android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_gravity="center" android:gravity="center_horizontal"
                      android:id="@+id/goMail">

            <TextView
                    android:text="E-mail"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/showMail"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"/>

            <ImageButton
                    android:background="@android:color/holo_red_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_dialog_email"
                    android:id="@+id/goMail2"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>